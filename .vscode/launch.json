{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Nest.js",
        "runtimeArgs": [
            "-r", 
            "ts-node/register", 
            "-r",
            "tsconfig-paths/register"
        ],
        "args": [
            "${workspaceFolder}/src/main.ts" // el archivo principal
        ],
       
        "autoAttachChildProcesses": true // para que todos los logs se puedan ver en la terminal
      }
    ]
  }